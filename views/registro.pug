doctype html
html
  head
    title Registro
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body(style="display: flex; justify-content: center; align-items: center; height: 100vh; margin: 0;")
    .container(style="max-width: 400px;")
      .card
        .card-body
          h1.card-title(text-align="center") Registro
          form(action="/users/registro", method="POST")
            .mb-3
              label(for="cedula", class="form-label") Cédula:
              input(type="text", name="cedula", class="form-control", required)
            .mb-3
              label(for="nombre", class="form-label") Nombre:
              input(type="text", name="nombre", class="form-control", required)
            .mb-3
              label(for="apellido1", class="form-label") Apellido 1:
              input(type="text", name="apellido1", class="form-control", required)
            .mb-3
              label(for="apellido2", class="form-label") Apellido 2:
              input(type="text", name="apellido2", class="form-control", required)
            .mb-3
              label(for="telefono", class="form-label") Teléfono:
              input(type="text", name="telefono", class="form-control", required)
            .mb-3
              label(for="email", class="form-label") Correo electrónico:
              input(type="email", name="email", class="form-control", required)
            .mb-3
              label(for="password", class="form-label") Contraseña:
              input(type="password", name="password", class="form-control", required)
            button.btn.btn-primary(type="submit", style="width: 100%") Registrarse
